<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	
	<select id="selectUserIdById" parameterType="String" resultType="String">
		<![CDATA[
			select id
			from users
			where id = #{id}
		]]>
	</select><!-- 안에 if문이 있을때 String 형 하나만 받을시에 _parameter -->
	
	<insert id="insertUserVo" parameterType="UserVo">
		<![CDATA[
			insert into users
			values(seq_users_no.nextval
			      ,#{id}
			      ,#{userName}
			      ,#{password}
			      ,sysdate
			)
		]]>
	</insert>
	
	<select id="selectUserVoByIdPassword" parameterType="UserVo" resultType="UserVo">
		<![CDATA[
			select userNo
			      ,id
			from users
			where id = #{id}
			  and password = #{password}
		]]>
	</select>
	
	
	<insert id="insertUser" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			insert into users
			values( seq_users_no.nextval
			       ,#{name}
			       ,#{email}
			       ,#{password}
			       ,#{gender})
		]]>
	</insert>
	
	<select id="selectUserByNo" parameterType="int" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select name
			      ,email
			      ,password
			      ,gender
			from users
			where no = #{no}
		]]>
	</select>
	
	<update id="insertUserByNamePasswordGenderNo" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			update users set 
					name = #{name},
					password = #{password},
					gender = #{gender}
					where no = #{no}
		]]>
	</update>
	
	<select id="selectUserByEmail" parameterType="String" resultType="UserVo">
		<![CDATA[
			select no
				  ,name
			      ,email
			      ,gender
			from users
			where email = #{email}
		]]>
	</select>
	
</mapper>